<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="co.formaloo.flashcard.viewmodel.UIViewModel" />

        
        <variable
            name="field"
            type="co.formaloo.model.form.Fields" />
        <variable
            name="form"
            type="co.formaloo.model.form.Form" />

        
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <include
            android:id="@+id/field_ui_header"
            layout="@layout/layout_flashcard_field_header" />
        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/field_ui_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/value_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/field_ui_header"
            android:layout_alignParentStart="true"
            android:minHeight="@dimen/btn_h_l"
            android:orientation="horizontal"
            android:padding="@dimen/padding_xsmall"
            android:visibility="visible"
            android:layout_alignParentLeft="true" />
        </androidx.core.widget.NestedScrollView>
        
    </RelativeLayout>
</layout>
