<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/submit_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_large"
    android:paddingBottom="@dimen/padding_large"
    android:paddingStart="@dimen/padding_standard"
    android:paddingEnd="@dimen/padding_standard">

    <TextView
        android:id="@+id/submit_number_txt"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:gravity="start"
        android:text="#"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_standard" />

    <TextView
        android:id="@+id/submit_form_title"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/padding_standard"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_standard" />

    <TextView
        android:id="@+id/submit_form_title2"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/padding_small"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_standard" />

    <TextView
        android:id="@+id/submit_form_title3"

        android:layout_width="0dp"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_standard" />

    <ImageView
        android:id="@+id/status_imv"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_marginStart="@dimen/padding_small"/>

