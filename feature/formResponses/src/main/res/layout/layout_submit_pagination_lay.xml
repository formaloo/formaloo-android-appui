<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

    <ProgressBar
            android:id="@+id/progress_next"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/padding_2xsmall"
            app:indicatorColor="?attr/colorPrimary"/>

    <ImageButton
            android:visibility="gone"
            android:id="@+id/submit_next_btn"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/padding_2xsmall"
            android:background="@null"
            android:padding="@dimen/padding_2xsmall"
            android:scaleType="centerInside"
            android:textColor="?attr/colorPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/submit_page_number_list"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size_large"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scrollbars="horizontal"/>

    <ImageButton
            android:id="@+id/submit_prev_btn"
            android:layout_width="@dimen/icon_size_large"
            android:padding="@dimen/padding_2xsmall"
            android:layout_height="@dimen/icon_size_large"
            android:layout_margin="@dimen/padding_2xsmall"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:textColor="?attr/colorPrimary"/>

    <ProgressBar
            android:id="@+id/progress_pre"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/padding_2xsmall"
            app:indicatorColor="?attr/colorPrimary"/>

</RelativeLayout>