<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_large"
        android:background="@color/white"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginEnd="@dimen/padding_standard"
        android:padding="@dimen/padding_2xsmall"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_large"
        android:background="@color/white"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginEnd="@dimen/padding_standard"
        android:padding="@dimen/padding_2xsmall"/>


    <LinearLayout
        android:background="@color/white"
        android:layout_margin="@dimen/padding_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/img_size_xs"
            android:layout_height="@dimen/img_size_xs"
            android:layout_marginTop="@dimen/padding_large"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@color/bg" />


        <View
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_xlarge"
            android:background="@color/bg"
            android:layout_margin="@dimen/padding_xlarge"
            android:textAlignment="center"
            android:textColor="@color/gray2"
            android:textSize="@dimen/font_xlarge" />

        <View
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_xlarge"
            android:background="@color/bg"
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginHorizontal="@dimen/padding_large"
            android:paddingHorizontal="@dimen/padding_large"
            android:transitionName="form_item_lay"
            tools:targetApi="lollipop" />


    </LinearLayout>


</LinearLayout>
